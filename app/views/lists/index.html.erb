<div class="container mt-5">
    <div class="d-flex flex-column align-items-center">
      <h1 class="text-light mb-3 display-1 font-weight-bold">All Lists</h1>

      <%= link_to "New list", new_list_path, class: "btn btn-primary mb-4" %>

      <ul class="cards">
  <% @lists.each do |list| %>
    <li class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, crop: :fill %>');">
      <%= link_to list.name, list_path(list), class: "text-light h3 text-decoration-none" %>
    </li>
  <% end %>
</ul>
   </div>
</div>
